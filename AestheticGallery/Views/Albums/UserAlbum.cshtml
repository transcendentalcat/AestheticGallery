@model IEnumerable<AestheticGallery.Models.ViewModels.AlbumViewModel>

@{
    ViewBag.Title = "UserAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="album-title"> Альбомы</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <a href="~/Albums/Photos/@item.AlbumID">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        

        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.ActionLink("Добавить фото", "AddPhoto", new { id = item.AlbumID }) |
            @Html.ActionLink("Удалить альбом", "Delete", new { id = item.AlbumID })
        </td>      
    </tr>
    }

</table>
