@model IEnumerable<AestheticGallery.Models.ViewModels.AlbumViewModel>

@{
    ViewBag.Title = "UserAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserAlbum</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @item.Id
        <tr>
            <td>
                <a href="~/Albums/Photos/@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Добавить фото", "AddPhoto", new { id = item.Id }) |
                @Html.ActionLink("Удалить альбом", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
